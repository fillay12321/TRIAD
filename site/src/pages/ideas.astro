---
const baseRaw = import.meta.env.BASE_URL || '/';
const base = baseRaw.endsWith('/') ? baseRaw : baseRaw + '/';
const target = base + 'innovations';
Astro.redirect(target);
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${target}`} />
    <title>Redirectingâ€¦</title>
  </head>
  <body class="bg-ink text-white">
    <p class="px-4 py-8">This page has moved to <a class="underline" href={target}>Innovations</a>.</p>
  </body>
</html>
